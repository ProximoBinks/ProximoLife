---
import Layout from "../components/Layout.astro";
---

<Layout title="proximo – home">
  <div class="min-h-[54vh]">
    <div class="max-w-[550px] w-auto rounded-lg border border-[#cecdcd] shadow-2xl">
      <!-- Window Header (Title Bar) -->
      <div class="h-[50px] bg-[#d1d0d1] rounded-t-lg flex items-center px-4">
        <!-- macOS-style Buttons -->
        <div class="flex items-center space-x-2">
          <div class="w-[12px] h-[12px] bg-[#ff5f56] rounded-full"></div>
          <div class="w-[12px] h-[12px] bg-[#ffbd2e] rounded-full"></div>
          <div class="w-[12px] h-[12px] bg-[#27c93f] rounded-full"></div>
          <a href="/admin/new-post" class="w-[12px] h-[12px] bg-[#d1d0d1] rounded-full"></a>
        </div>
      </div>

      <!-- Window Content (Folder & Files) -->
      <div class="h-[300px] bg-[#ececec] rounded-b-lg flex flex-col p-6">
        <!-- Folder Name -->
        <div class="text-gray-700 font-semibold mb-4">📁 My Folder</div>

        <!-- Files (Navigation Links) -->
        <div class="flex flex-col space-y-2">
          <a
            href="/blog"
            class="flex items-center text-gray-800 hover:opacity-80"
          >
            📄 blog.md
          </a>
          <!-- <a
            href="/about"
            class="flex items-center text-gray-800 hover:opacity-80"
          >
            📄 About.txt
          </a> -->
          <a
            href="/contact"
            class="flex items-center text-gray-800 hover:opacity-80"
          >
            📄 contact.doc
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>